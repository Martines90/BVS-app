{
  "compilerOptions": {
    "target": "es5",
    "module": "es2022",
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "test-utils": ["./utils/test-utils"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@global/*": ["./global/*"],
      "@blockchain/*": ["./blockchain/*"],
      "@utils/*": ["src/utils/*"],
      "@mocks/*": ["./mocks/*"],
      "@assets/*": ["./assets/*"],
      "@pages/*": ["./pages/*"],
      "@server/*": ["./server/*"],
    },
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "src/utils", "webpack.config.js"]
}
