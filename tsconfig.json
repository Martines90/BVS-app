{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "test-utils": ["./utils/test-utils"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@global/*": ["./global/*"],
      "@blockchain/*": ["./blockchain/*"],
      "@utils/*": ["./utils/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src/**/*"]
}
